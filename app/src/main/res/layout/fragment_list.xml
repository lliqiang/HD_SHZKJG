<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.hengda.shzkjg.m.fragment.IntroFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_list"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabMode="fixed"
        app:tabTextColor="@color/white"
        app:tabSelectedTextColor="@null"
        android:background="@mipmap/bg_list_noshadow"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        app:tabGravity="fill"
        android:scrollIndicators="none"
        app:tabIndicatorHeight="0dp"
        app:tabPaddingTop="3dp"
        app:tabPaddingBottom="-4dp"
        android:layout_gravity="bottom"
        app:tabIndicatorColor="@color/white"
        app:tabTextAppearance="@style/tab_text_appearance"
         />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"

       />


</LinearLayout>
